<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle_Project_.SettingsPage"
             Title="Settings">
    
      <ScrollView>
        <VerticalStackLayout Spacing="20" 
                            Padding="20"
                            VerticalOptions="Start">


            <Button Grid.Column="0"
                   Text="←"
                   FontSize="24"
                   WidthRequest="50"
                   HeightRequest="50"
                   BackgroundColor="#333333"
                   TextColor="#eeeeee"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                    Clicked="OnBackButtonClicked"/>          

            <Label Text="Settings"
                   TextColor="#eeeeee"
                   FontSize="32"
                   FontAttributes="Bold"
                   Margin="0,20,0,40"
                   FontFamily="WordleFont"/>

            <!-- Theme Settings -->
            <Frame BackgroundColor="#333333"
                   Padding="20"
                   CornerRadius="10"
                   Margin="0,0,0,15">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="Theme"
                           TextColor="#eeeeee"
                           FontSize="20"
                           FontFamily="WordleFont"
                           FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10" 
                                         HorizontalOptions="Start">
                        <Button x:Name="DarkModeButton"
                                Text="Dark"
                                BackgroundColor="#454545"
                                TextColor="#9a9a9a"
                                FontFamily="WordleFont"
                                WidthRequest="120"
                                HeightRequest="40"/>
                      

                        <Button x:Name="LightModeButton"
                                Text="Light"
                                BackgroundColor="#9a9a9a"
                                TextColor="#252525"
                                FontFamily="WordleFont"
                                WidthRequest="120"
                                HeightRequest="40" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Keyboard Settings -->
            <Frame BackgroundColor="#333333"
                   Padding="20"
                   CornerRadius="10">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="Keyboard"
                           TextColor="#eeeeee"
                           FontSize="20"
                           FontFamily="WordleFont"
                           FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10" 
                                         HorizontalOptions="Start">
                        <Button x:Name="KeyboardOn"
                                Text="On"
                                BackgroundColor="#454545"
                                TextColor="#9a9a9a"
                                FontFamily="WordleFont"
                                WidthRequest="120"
                                HeightRequest="40"/>

                        <Button x:Name="KeyboardOff"
                                Text="Off"
                                BackgroundColor="#9a9a9a"
                                TextColor="#252525"
                                FontFamily="WordleFont"
                                WidthRequest="120"
                                HeightRequest="40"/>

                    
                        
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>